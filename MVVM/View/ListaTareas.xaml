<Page x:Class="PracticaEx.MVVM.View.ListaTareas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticaEx.MVVM.View"
      mc:Ignorable="d"
      DataContext="{StaticResource AppViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListaTareas">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#D6E4FF"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15, 5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                      Content="{TemplateBinding Content}"
                                      ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C2D9FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A0C3FF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Foreground" Value="#ADADAD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Margin="2" HorizontalAlignment="Center" Grid.ColumnSpan="2">
            <Button Content="Lista Completa" Width="120" Height="40" Margin="5" Click="Button_Click"/>
            <Button Content="Completadas" Width="120" Height="40" Margin="5" Click="Button_Click_1"/>
            <Button Content="En Progreso" Width="120" Height="40" Margin="5" Click="Button_Click_2"/>
            <Button Content="Pendientes" Width="120" Height="40" Margin="5" Click="Button_Click_3"/>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Tarea Seleccionada" FontWeight="Bold" FontSize="24" Margin="10,0,0,50"/>
            <TextBlock Text="Id:" FontWeight="Bold" FontSize="14" Margin="10,0,0,10"/>
            <TextBlock Text="{Binding TareaSeleccionada.ID}" Margin="10,0"/>
            <TextBlock Text="Titulo:" FontWeight="Bold" FontSize="14" Margin="10,0,0,10"/>
            <TextBlock Text="{Binding TareaSeleccionada.Nombre}" Margin="10,0"/>
            <TextBlock Text="Descripcion:" FontWeight="Bold" FontSize="14" Margin="10,0,0,10"/>
            <TextBlock Text="{Binding TareaSeleccionada.Descripcion}" Margin="10,0" TextWrapping="Wrap"/>
            <TextBlock Text="Estado:" FontWeight="Bold" FontSize="14" Margin="10,0,0,10"/>
            <TextBlock Text="{Binding TareaSeleccionada.FechaCreacion}" Margin="10,0"/>
            <TextBlock Text="Fecha:" FontWeight="Bold" FontSize="14" Margin="10,0,0,10"/>
            <TextBlock Text="{Binding TareaSeleccionada.Estado}" Margin="10,0"/>
        </StackPanel>
    </Grid>
</Page>
